{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build",
      "command": "g++.exe",
      "args": [
        "-g",
        "-std=c++17",
        "${file}",
        "${workspaceFolder}/src/glad.c",
        "-I",
        "${workspaceFolder}/include",
        "-L",
        "${workspaceFolder}/lib/GLFW",
        "-lopengl32",
        "-lglfw3",
        "-lgdi32",
        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
